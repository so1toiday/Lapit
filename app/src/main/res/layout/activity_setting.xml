<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/mainbackground"
    android:layout_height="match_parent"
    tools:context=".ui.acitivity.SettingActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:src="@drawable/user"
        android:layout_marginTop="30dp"
        android:id="@+id/imUser"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true" />
    <TextView
        android:maxLines="1"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:id="@+id/tvDisplayName"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:maxLines="3"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tvDisplayName"
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:onClick="ChangImage"
        android:id="@+id/btnChangImage"
        android:padding="8dp"
        android:text="@string/changeimage"
        style="@style/button2"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btnChangStatus"
        android:layout_marginBottom="16dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>
    <Button
        android:onClick="ChangeStatus"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/btnChangStatus"
        android:layout_centerHorizontal="true"
        android:text="@string/changstatus"
        style="@style/button1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>
</RelativeLayout>